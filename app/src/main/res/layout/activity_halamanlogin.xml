<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/gradiasibackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".halamanlogin">


    <ImageView
        android:id="@+id/logomakam"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logograndfinder"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btdaftar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:backgroundTint="@color/black"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/logomakam"
        app:layout_constraintEnd_toStartOf="@id/btmasuk"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btmasuk"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/brown"
        android:layout_marginTop="60dp"
        android:text="Masuk"
        app:layout_constraintTop_toBottomOf="@id/logomakam"
        app:layout_constraintStart_toEndOf="@id/btdaftar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btmasukadmin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:text="Masuk Admin"
        app:layout_constraintTop_toBottomOf="@id/btmasuk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>